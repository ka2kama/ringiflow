          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/post-write-format.sh"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "excludedCommands": [
      "git",
      "gh",
      "cargo",
      "elm",
      "npm",
      "node",
      "terraform",
      "docker",
      "docker-compose",
      "psql",
      "redis-cli",
      "just"
    ]
  },
  "attribution": {
    "commit": "Co-Authored-By: Claude Code <noreply@anthropic.com>"
  },
  "cleanupPeriodDays": 30,
  "respectGitignore": true
}
