      "Bash(cargo --version)",
      "Bash(elm --version)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(terraform --version)"
    ],
    "ask": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
