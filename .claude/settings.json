      "Read(./secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/*secret*)",
      "Read(~/.aws/credentials)",
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(curl | sh)",
      "Bash(curl | bash)",
      "Bash(wget -O - | sh)",
      "Bash(eval:*)",
      "Bash(aws iam:*)",
      "Bash(aws sts assume-role:*)",
      "Bash(terraform destroy -auto-approve:*)"
    ],
    "additionalDirectories": []
