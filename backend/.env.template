# =============================================================================
# RingiFlow バックエンド設定
# =============================================================================

# -----------------------------------------------------------------------------
# データベース接続
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://ringiflow:ringiflow@localhost:15432/ringiflow

# -----------------------------------------------------------------------------
# Redis 接続
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:16379

# -----------------------------------------------------------------------------
# BFF サーバー設定
# -----------------------------------------------------------------------------
BFF_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Core Service サーバー設定
# -----------------------------------------------------------------------------
CORE_HOST=0.0.0.0
CORE_PORT=13001

# -----------------------------------------------------------------------------
# Auth Service サーバー設定
# -----------------------------------------------------------------------------
AUTH_HOST=0.0.0.0
AUTH_PORT=13002

# -----------------------------------------------------------------------------
# BFF から Core Service への接続
# -----------------------------------------------------------------------------
CORE_URL=http://localhost:13001

# -----------------------------------------------------------------------------
# BFF から Auth Service への接続
# -----------------------------------------------------------------------------
AUTH_URL=http://localhost:13002

# -----------------------------------------------------------------------------
# DynamoDB 接続（監査ログ）
# -----------------------------------------------------------------------------
DYNAMODB_ENDPOINT=http://localhost:18000

# -----------------------------------------------------------------------------
# S3 接続（ドキュメント管理）
# ローカル: MinIO に接続（S3_ENDPOINT_URL 設定あり）
# 本番: AWS S3（S3_ENDPOINT_URL 未設定 → SDK デフォルト）
# -----------------------------------------------------------------------------
S3_ENDPOINT_URL=http://localhost:19000
S3_BUCKET_NAME=ringiflow-dev-documents
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# -----------------------------------------------------------------------------
# ログ・環境設定
# -----------------------------------------------------------------------------
RUST_LOG=info,ringiflow=debug
LOG_FORMAT=pretty
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# 通知設定
# -----------------------------------------------------------------------------
NOTIFICATION_BACKEND=smtp
SMTP_HOST=localhost
SMTP_PORT=11025
NOTIFICATION_FROM_ADDRESS=noreply@ringiflow.example.com
NOTIFICATION_BASE_URL=http://localhost:15173
